                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_chat_time"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_16sdp"
                            app:cardBackgroundColor="@color/white">

                            <RelativeLayout
                                android:layout_width="@dimen/_190sdp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_second_txt"
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:layout_marginBottom="@dimen/_4sdp"
                                    android:fontFamily="@font/gilroy_medium"
                                    android:text="How can I help you today?"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_third_txt"
                                    android:layout_width="@dimen/_150sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tv_second_txt"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:fontFamily="@font/gilroy_medium"
                                    android:text="Tap an option from below"
                                    android:textAlignment="textStart"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_12ssp" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/tv_third_txt"
                                    android:layout_marginStart="@dimen/_8sdp"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:layout_marginEnd="@dimen/_8sdp"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:background="@drawable/chat_child_blue_back"
                                        android:backgroundTint="@color/chat_answer_select"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_8sdp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:text="I am suffering from SIDE EFFECTS"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_11ssp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:background="@drawable/chat_child_blue_back"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_8sdp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="I need EMERGENCY CARE"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_11ssp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:background="@drawable/chat_child_blue_back"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_8sdp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="Need to confirm my MEDICINE ROUTINE"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_11ssp" />

                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:background="@drawable/chat_child_blue_back"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:foreground="?attr/selectableItemBackground"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/_3sdp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:text="I want to SEE / UPDATE my VITALS before proceeding further"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_11ssp" />
                                    </RelativeLayout>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_chat_time_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cv_second"
                            android:layout_marginStart="@dimen/_16sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:fontFamily="@font/gilroy_semi_bold"
                            android:text="8:13 PM"
                            android:textColor="@color/m_grey"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cv_first_chat" />


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/ll_chat_ended"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_below="@+id/tv_chat_time_two"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:background="@color/m_red"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
