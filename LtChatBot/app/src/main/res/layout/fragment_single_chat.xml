                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:layout_toEndOf="@+id/iv_body_weight_header"
