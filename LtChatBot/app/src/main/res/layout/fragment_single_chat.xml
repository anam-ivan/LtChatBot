                                        android:paddingTop="@dimen/sp_4"
                                        android:paddingBottom="@dimen/sp_4">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tv_blood_sugar"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_medium"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="@string/blood_sugar"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12ssp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:layout_toEndOf="@+id/tv_blood_sugar"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="180 mg/dL"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_11ssp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:orientation="horizontal"
                                        android:paddingTop="@dimen/sp_4"
                                        android:paddingBottom="@dimen/sp_4">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tv_blood_sugar_fasting"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_medium"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="@string/blood_sugar_fasting"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12ssp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:layout_toEndOf="@+id/tv_blood_sugar_fasting"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:text="108 mg/dL"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_11ssp" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:orientation="horizontal"
                                        android:paddingTop="@dimen/sp_4"
                                        android:paddingBottom="@dimen/sp_4">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tv_oxygen"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:fontFamily="@font/gilroy_medium"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="@string/oxygen"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12ssp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="@dimen/_4sdp"
                                            android:layout_marginEnd="@dimen/_4sdp"
                                            android:layout_toEndOf="@+id/tv_oxygen"
                                            android:fontFamily="@font/gilroy_semi_bold"
                                            android:gravity="center_vertical"
                                            android:maxLines="1"
                                            android:text="87%"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_11ssp" />
                                    </RelativeLayout>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </RelativeLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_chat_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/cv_first_chat"
