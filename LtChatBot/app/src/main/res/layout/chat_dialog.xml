<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_dialog_back"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_first_layout_back"
        android:fontFamily="@font/gilroy_semi_bold"
        android:padding="@dimen/_10sdp"
        android:text="Back to Main Menu"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_third_password_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navy_blue"
        android:fontFamily="@font/gilroy_semi_bold"
        android:padding="@dimen/_10sdp"
        android:text="Back to Previous Menu"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_third_layout_back"
        android:fontFamily="@font/gilroy_semi_bold"
        android:padding="@dimen/_10sdp"
        android:text="Start a New Conversation"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>